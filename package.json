{
  "name": "padmaniacs",
  "version": "0.0.7",
  "description": "Pocket Pixel Art StepMania clone",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "interface": "node index.js",
    
    "build": "node index.js --all --debug",
    "build:web": "node index.js --web --debug",
    "build:cordova": "node index.js --cordova --debug --no-install",
    "build:nwjs": "node index.js --nwjs --debug",
    "build:min": "node index.js --all --minify --debug",
    "build:dev": "node index.js --none --debug",
    "build:release": "node index.js --all --minify --zipalign",
    "build:headless": "node index.js --all --minify --headless",
    
    "serve": "node index.js --serve",
    "serve:dist": "node index.js --serve",
    "serve:src": "node index.js --serve-src",
    "serve:dev": "node index.js --serve-src",
    
    "dev": "npm run build:dev && npm run serve:dist",
    "dev:fast": "npm run serve:src",
    
    "android": "node index.js --cordova --debug --no-install",
    "android:release": "node index.js --cordova --minify --zipalign --no-install",
    "windows": "node index.js --nwjs --debug",
    "windows:release": "node index.js --nwjs --minify",
    "web": "node index.js --web --debug",
    "web:release": "node index.js --web --minify",
    
    "release": "node index.js --all --minify --zipalign",
    "release:headless": "node index.js --all --minify --zipalign --headless",
    
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist && rm -f *.zip *.apk",
    
    "test": "node test.js",
    "help": "node index.js --help"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RetoraDev/PadManiacs.git"
  },
  "author": "RetoraDev",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/RetoraDev/PadManiacs/issues"
  },
  "homepage": "https://github.com/RetoraDev/PadManiacs#readme",
  "keywords": [
    "rhythm-game",
    "music-game",
    "dance",
    "vocaloid",
    "stepmania",
    "ddr",
    "phaser",
    "pixel-art"
  ]
}